{
  "name": "bitname-cli",
  "version": "0.0.2",
  "main": "dist/bitname.umd.js",
  "module": "dist/bitname.es5.js",
  "types": "dist/index.d.ts",
  "author": "Colin Atkinson",
  "description": "Associate public keys with names on the Bitcoin blockchain",
  "keywords": [
    "typescript",
    "bitcoin",
    "cryptography"
  ],
  "homepage": "https://github.com/colatkinson/bitname-cli",
  "bugs": "https://waffle.io/colatkinson/bitname-cli",
  "repository": {
    "type": "git",
    "url": "https://github.com/colatkinson/bitname-cli.git"
  },
  "license": "LGPL-3.0-or-later",
  "private": true,
  "devDependencies": {
    "@types/jest": "^21.1.9",
    "@types/node": "^9.4.6",
    "@types/node-fetch": "^1.6.7",
    "@types/yargs": "^10.0.0",
    "jest": "^22.0.4",
    "rollup": "^0.56.3",
    "rollup-plugin-commonjs": "^8.3.0",
    "rollup-plugin-json": "^2.3.0",
    "rollup-plugin-node-resolve": "^3.0.3",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.11.1",
    "ts-jest": "^22.0.0",
    "ts-node": "^3.3.0",
    "tslint": "^5.8.0",
    "typedoc": "^0.10.0",
    "typescript": "^2.6.2"
  },
  "dependencies": {
    "bcoin": "^1.0.0-beta.15",
    "chalk": "^2.3.0",
    "electrum-client": "^0.0.6",
    "n64": "^0.0.18",
    "node-fetch": "^1.7.3",
    "randombytes": "^2.0.5",
    "yargs": "^10.0.3"
  },
  "scripts": {
    "start:dev": "ts-node index.ts",
    "build": "rollup -c",
    "start": "npm run build && node dist/bitname.umd.js",
    "test": "jest",
    "build:docs": "typedoc --out ./docs --excludeExternals --externalPattern \"**/node_modules/**\" --ignoreCompilerErrors --exclude \"**/+(__mocks__|__tests__|.git|node_modules)/**\" --name bitname ."
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "mapCoverage": true
  },
  "bin": {
    "bitname": "dist/bin/bitname-cli.cjs.js"
  }
}
